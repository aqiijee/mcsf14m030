@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using EadTermProject.Models
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
    @section Classes
{
        <div style="background-image: url(/images/i2.jpg); color: #a9edf9;margin-left:20px;margin-right:20px ;height:100%">
            <br />
            <center><h1 style="color: orchid; font-style: oblique; ">Classes</h1></center>
            @if (ViewBag.Classes != null)
            {
            foreach (Class c in ViewBag.Classes)
                  {
                           <center><a style=" color: #a9edf9" href="/Teacher/Class?Id=@c.Id"><h3> @c.Name</h3> </a></center>
                                <br />

                   }
            }
            <center><a href="/Teacher/AddClass"  style="color: orchid; font-style: oblique; ">Add Classes</a></center>

            <br />
            <br />
            <br />
          
        </div>

    }




    @section Post
{
    
    <center style="height:50px"> <h1 style="padding-top: 10px; font-size:50px; font-style: oblique; color: orchid; font-family: serif; margin-top: 5px; ">@ViewBag.Class.Name</h1></center>
        <div style=" width: 540px; align-content: center;">


            <form name="Post" action="/Teacher/Post" method="post" id="post" enctype="multipart/form-data" style="color:white;margin-left:30px;margin-right:30px;">
                <h1 style="font-size: 40px;font-style:oblique; margin-left: 70px; color: #a9edf9"></h1>
                <div class="form-group">
                    <label style="font-size: 20px; color: #a9edf9" for="i1">Subject:</label>
                    <input type="text" class="form-control" id="i1" name="Subject">
                </div>
                <div class="form-group">
                    <label style="font-size: 20px; color: #a9edf9" for="i2">Description:</label>
                    <input type="text" class="form-control" id="i2" name="Description">
                </div>
                <div class="form-group">
                    <label style="font-size: 20px; color: #a9edf9" for="i3">AttachFile:</label>
                    <input type="file" class="form-control" id="i3" name="UploadFile">
                </div>
                <center><input type="submit" class="btn btn-info" value="Post" id="b1" style="width:65px" /></center>


            </form>

        </div>
    
}
    @section Member
{
        <div style="background-image: url(/images/i2.jpg); color: #a9edf9;margin-left:20px;margin-right:20px ;height:100%">
            <br />
            <center><h1 style="color: orchid; font-style: oblique; ">Members</h1></center>
            <center><a href="/Teacher/AddMember" style="color: orchid; font-style: oblique; ">Add Members</a></center>

            @if (ViewBag.Member != null)
{
    foreach (User u in ViewBag.Member)
    {
        <form name="login" action="/Teacher/Remove" method="post">
            <input type="hidden" name="Id" value="@u.Id" />
            <div class="form-group">
                <center>
                    <label style=" color: #a9edf9" for="i1">@u.UserName:</label>
                    <input type="submit" class="form-control" id="i1" name="i1" value="Remove">
                </center>
            </div>
        </form>
                   
                    

               
            }
            } 

            <br />
            <br />
            <br />

        </div>

    }

 
</body>
</html>