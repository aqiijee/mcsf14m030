}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
    <script src="~/Scripts/jquery-1.12.0.min.js"></script>
    <style type="text/css">
    

      
     
    </style>
    <script>
        $(document).ready(function () {

            $("#b1").click(function () {
               var v1 = $("#i1").val();
               var v2 = $("#i2").val();
               if(v1=="" || v2=="")
               {
                   alert("Email Or Password is not Provided");
                   $("#login").attr("action", "/Home/SignIn");
               }
            });
        });





    </script>
</head>
<body >
@section signIn{
  
    <div    style="background-image: url(/images/i2.jpg);height:400px; width: 400px; align-content: center; padding-top: 10px;margin-top:200px;border-color:#17134b;border:solid;border-width:1px" class="center-block">
           

            <form name="login" action="/Home/login" method="post" id="login" style="color:white;margin-left:30px;margin-right:30px;margin-top:10px">
                <h1 style="font-size: 65px; margin-left: 70px; color: #a9edf9">SignIn</h1>
                <div class="form-group">
                    <label style="font-size: 20px; color: #a9edf9" for="usr">Name:</label>
                    <input  type="email" class="form-control" id="i1" name="Email">
                </div>
                <div class="form-group">
                    <label style="font-size: 20px; color: #a9edf9" for="pwd">Password:</label>
                    <input  type="password" class="form-control" id="i3" name="Password">
                </div>

                <input type="submit" class="btn btn-info" value="SignIn" id="b1" style="margin-left:130px">
                <div>
                    <p style="font-size: 20px; color:red">
                        @TempData["Message"]
                    </p>


            </form>

        </div>



}





</body>
</html>
